<div class="container">

	<div class="header text-center">
		<h2>Noctua Basic</h2>
	</div>

	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Basic Interface</h3>
		</div>
		<div class="panel-body">

			<div class="form-group">
				<label for="select_gene_product">Gene product</label>
				<div intro='fade' id="hits_placeholder"></div>
				<select id="select_gene_product" placeholder="Pick a gene..."></select>
				<div id="gp_placeholder"></div>
			</div>

			<div class="form-group">
				<label for="basic_qualifier_input">Qualifier (optional)</label>
				<div id="qualifier_placeholder"></div>
				<div id="www"></div>
			</div>

			<div class="form-group">
				<label for="basic_term_input">Term</label>
				<input id="basic_term_input"
				class="form-control"
				type="text"
				placeholder="monarch:phenotype100050-pn">
			</div>

			<div class="form-group">
				<label for="basic_evidence_input">Evidence</label>
				<input id="basic_evidence_input"
				class="form-control"
				type="text"
				placeholder="">
			</div>

			<div class="form-group">
				<label for="basic_reference_input">Reference</label>
				<input id="basic_reference_input"
				class="form-control"
				type="text"
				placeholder="">
			</div>

			<div class="form-group">
				<label for="basic_with_input">With (optional)</label>
				<input id="basic_with_input"
				class="form-control"
				type="text"
				placeholder="">
			</div>


			<div class="form-group">
				<label for="title">Title</label>
				<input id="title_input"
				class="form-control"
				type="text"
				placeholder="">

				<button id="add_title_button"
				type="submit"
				class="btn btn-primary">Add title</button>
			</div>

			<button id="select_stored_jump_button"
			type="submit"
			class="btn btn-primary">Create</button>

			<button id="save_button"
			type="submit"
			class="btn btn-primary">Save into file</button>

			<div id="alert-wrapper" class="alert alert-info alert-dismissible" role="alert" style="display: none;">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<div id="alert-message">hidden</div>
			</div>
		</div>

	</div>


</div>
